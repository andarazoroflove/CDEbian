}

# #####

ACTION Passwd
{
        LABEL           Cambiar contraseña
        ARG_COUNT       0
        TYPE            COMMAND
        WINDOW_TYPE     NO_STDIO
        EXEC_STRING     dtterm -geometry 60x8 -xrm "*menuBar: False" -e sh -c '                                echo "Cambio de contraseña";                                echo "--------------------";                                passwd'



        DESCRIPTION     La acción Cambiar contraseña (Passwd) \
                        utiliza el mandato 'passwd' para cambiar\
                        la contraseña del usuario.
}

