ACTION Xpuzzle
{
        LABEL		Rompecabezas X  
        ARG_COUNT	0
        TYPE            COMMAND
        WINDOW_TYPE     NO_STDIO
        EXEC_STRING     xpuzzle
	DESCRIPTION	La acción Rompecabezas X (Xpuzzle) invoca el cliente X \
