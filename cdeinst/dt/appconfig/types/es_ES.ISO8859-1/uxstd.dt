DATA_ATTRIBUTES TAR
{
        ACTIONS         Open,TarUnpack,Print
        ICON		Dtmagtp
        NAME_TEMPLATE	%s.tar
        MIME_TYPE	application/octet-stream
	DESCRIPTION	Este archivo es un archivo archivador que contiene \
                        varios archivos individuales. Su tipo de datos se \
                        denomina TAR. Los nombres de los archivos TAR \
                        finalizan en '.tar'.
        TYPE_LABEL      TAR
}
DATA_CRITERIA TAR1
{
	DATA_ATTRIBUTES_NAME TAR
        MODE            f
	NAME_PATTERN	*.tar
}
ACTION Open
{
        LABEL           Abrir
        ARG_TYPE        TAR
        TYPE            MAP
        MAP_ACTION      TarList
}
ACTION Print
{
        LABEL           Imprimir
        ARG_TYPE        TAR
        TYPE            MAP
        MAP_ACTION      PrintTarList
}
ACTION TarList
{
	LABEL		Contenido de la lista del archivo archivador
        ICON		Dtmagtp
        TYPE            COMMAND
        WINDOW_TYPE     PERM_TERMINAL
        EXEC_STRING     sh -c '                         tar -tvf "%(File)Arg_1%" 2>&1 | \${PAGER:-more}; 	    echo "\\n*** Seleccione Cerrar o Salir en el menú de la ventana para cerrar esta ventana ***"'


	DESCRIPTION	La acción Contenido de la lista del archivo archivador (TarList) \
                        lista los archivos contenidos en un archivo archivador TAR.
}
ACTION PrintTarList
{
	LABEL		ImprimirListaTar
        TYPE            COMMAND
        WINDOW_TYPE     NO_STDIO
        EXEC_STRING     sh -c '                         tar -tvf "%(File)Arg_1%" |                            /usr/dt/bin/dtlp -u "Contenido de la lista del archivo archivador"'


	DESCRIPTION	La acción ImprimirListaTar imprime una lista de los \
                        archivos contenidos en un archivo archivador TAR \
                        en la impresora predeterminada.
}
ACTION TarUnpack
{
	LABEL		Desempaquetar archivo archivador
        ICON		Dtmagtp
        TYPE            COMMAND
        WINDOW_TYPE     PERM_TERMINAL
        EXEC_STRING     sh -c ' 	                tar -xvf "%(File)Arg_1"Nombre del archivo:"%"                            2>&1 | \${PAGER:-more}; 	    echo "\\n*** Seleccione Cerrar o Salir en el menú de la ventana para cerrar esta ventana ***"'



	DESCRIPTION	La acción Desempaquetar archivo archivador (TarUnpack) \
                        acepta un archivo TAR como argumento y separa los \
                        archivos archivados en archivos independientes.
}

