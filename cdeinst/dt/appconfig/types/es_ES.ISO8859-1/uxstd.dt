# #####################
#
# Mandatos de Unix
#
# #####################
# La siguiente acción utiliza 'true %(File)Args%' en EXEC_STRING.
# El único resultado de esta sentencia es hacer que todos los
# argumentos se 'utilicen' en una sola invocación de la acción.
ACTION Tar
{
	LABEL		Archivar
        ICON		Dtmagtp
	ARG_COUNT	>1
	TYPE		COMMAND
	WINDOW_TYPE	NO_STDIO
	EXEC_STRING	          sh -c '            if [ "%(File)Args%" = "" ] ; then                 /usr/dt/bin/dterror.ds             "La acción Archivar sólo acepta un único\\n \
argumento que debe ser una carpeta."             "Argumentos no válidos"             "OK" ;            else            true %(File)Args%;            /usr/dt/bin/dterror.ds             "La acción Archivar sólo acepta un único\\n \
argumento que debe ser una carpeta."             "Argumentos no válidos"             "OK"            fi; '
	DESCRIPTION	La acción Archivar (Tar) acepta un argumento de \
                        carpeta y archiva todos los archivos que \
                        contiene en un solo archivo "tar". Utiliza el \
                        mandato 'tar'.
}
ACTION Tar
{
	LABEL		Archivar
        ICON		Dtmagtp
        TYPE            COMMAND
        WINDOW_TYPE     PERM_TERMINAL
	EXEC_STRING		  sh -c '             if [ "%(File)Args%" = "" ] ; then 	        echo "ERROR: '%(File)Arg_1%' no es una carpeta.";             else 	    if [ ! -d "%(File)Arg_1"Carpeta a archivar:"%" ] ; then 	        echo "ERROR: '%(File)Arg_1%' no es una carpeta."; 	    else                 FOLDER="%(File)Arg_1%.tar"; 	        TAR_FILE=`basename "%(File)Arg_1%.tar"`;                 echo "Creando \$FOLDER.";                 echo "[Espere, por favor ...]\\n"; 	        tar -cvf \$TAR_FILE `basename "%(File)Arg_1%"` 2>&1 | 	          \${PAGER:-more};                 echo "\\nEl Archivo archivador se ha creado y se ha almacenado en \$FOLDER."; 	    fi; 	    fi; 	    echo "\\n*** Seleccione Cerrar o Salir en el menú de la ventana para cerrar esta ventana ***"'
	DESCRIPTION	La acción Archivar (Tar) acepta un argumento de \
                        carpeta y archiva todos los archivos que \
                        contiene en un solo archivo "tar". Utiliza el \
                        mandato 'tar'.
}

