ACTION Diff
{
	LABEL		Comparar archivos
        TYPE            COMMAND
        WINDOW_TYPE     PERM_TERMINAL
        EXEC_STRING     sh -c ' 	    file1="%(File)Arg_1"Primer archivo (<):"%" ;	    file2="%(File)Arg_2"Segundo archivo (>):"%" ;            cmp -s \$file1 \$file2 ;            if [ \$? -eq 0 ] ; then               echo "Los archivos \$file1 y \$file2 son iguales." ;             else               diff \$file1 \$file2  | \${PAGER:-more} ;            fi ;	    echo "\\n*** Seleccione Cerrar o Salir en el menú de la ventana para cerrar esta ventana ***"'
	DESCRIPTION	La acción Comparar archivos (Diff) compara dos archivos \
                        utilizando el mandato 'diff'.
}

