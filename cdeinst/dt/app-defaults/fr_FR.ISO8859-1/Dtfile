#include "Dt"

Dtfile*DtIcon*pixmapForeground:     black
Dtfile*DtIcon*behavior:             icon_drag
Dtfile*DtIcon*highlightThickness:   1
Dtfile*icon*marginWidth:            0
Dtfile*icon*marginHeight:           0

Dtfile*searchPath:                  DT/Dtfile

Dtfile*promptUser:            True
Dtfile*moveThreshold:         10
Dtfile*showEmptySet:          True

Dtfile*filter_files*file_name_text.columns:          30
Dtfile*rootTitle:                                    ROOT

!######
!# These resources set the accelerators used in the File Manager
!# along with the accelerator Text.
Dtfile*fileMenu.find.acceleratorText:                 Ctrl+F
Dtfile*fileMenu.find.accelerator:                     Ctrl<Key>f
Dtfile*.close.acceleratorText:                        Alt+F4
Dtfile*.close.accelerator:                            Alt<Key>F4
Dtfile*fileMenu.goHome.acceleratorText:               Ctrl+H
Dtfile*fileMenu.goHome.accelerator:                   Ctrl<Key>h
Dtfile*fileMenu.goUp.acceleratorText:                 Ctrl+U
Dtfile*fileMenu.goUp.accelerator:                     Ctrl<Key>u
Dtfile*fileMenu.openTerminal.acceleratorText:         Ctrl+T
Dtfile*fileMenu.openTerminal.accelerator:             Ctrl<Key>t
Dtfile*viewMenu.showHiddenObjects.acceleratorText:    Ctrl+S
Dtfile*viewMenu.showHiddenObjects.accelerator:        Ctrl<Key>s
Dtfile*actionMenu.copy.acceleratorText:               Ctrl+C
Dtfile*actionMenu.copy.accelerator:                   Ctrl<Key>c
Dtfile*actionMenu.permissions.acceleratorText:        Ctrl+<RetAr>
Dtfile*actionMenu.permissions.accelerator:            Ctrl<Key>osfBackSpace
Dtfile*selectAll.acceleratorText:                     Ctrl+/
Dtfile*selectAll.accelerator:                         Ctrl<Key>slash
Dtfile*deselectAll.acceleratorText:                   Ctrl+\\
Dtfile*deselectAll.accelerator:                       Ctrl<Key>Retour arrière

!######
!# Here are some additional accelerators we decided not to set by 
